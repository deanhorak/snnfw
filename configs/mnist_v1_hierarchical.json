{
  "experiment": {
    "name": "mnist_v1_hierarchical",
    "description": "MNIST with anatomically-correct V1 hierarchical structure (Phase 1: Baseline)"
  },
  "network": {
    "architecture": "hierarchical_v1",
    "grid_size": 8,
    "num_orientations": 8,
    "edge_threshold": 0.165
  },
  "neuron": {
    "window_size_ms": 200.0,
    "similarity_threshold": 0.7,
    "max_patterns": 100
  },
  "learning": {
    "strategy": "hybrid",
    "merge_threshold": 0.85,
    "merge_weight": 0.3,
    "blend_alpha": 0.2,
    "prune_threshold": 2
  },
  "classification": {
    "strategy": "majority",
    "k_neighbors": 5,
    "distance_exponent": 2.0
  },
  "training": {
    "examples_per_digit": 5000,
    "test_images": 10000
  },
  "data": {
    "train_images": "/home/dean/repos/ctm/data/MNIST/raw/train-images-idx3-ubyte",
    "train_labels": "/home/dean/repos/ctm/data/MNIST/raw/train-labels-idx1-ubyte",
    "test_images": "/home/dean/repos/ctm/data/MNIST/raw/t10k-images-idx3-ubyte",
    "test_labels": "/home/dean/repos/ctm/data/MNIST/raw/t10k-labels-idx1-ubyte"
  },
  "adapters": {
    "retina": {
      "type": "retina",
      "parameters": {
        "grid_size": 8,
        "num_orientations": 8,
        "edge_threshold": 0.165,
        "edge_operator": "sobel",
        "encoding_strategy": "rate",
        "temporal_window": 200.0,
        "neuron_window_size": 200.0,
        "neuron_threshold": 0.7,
        "neuron_max_patterns": 100
      }
    }
  },
  "hierarchy": {
    "brain": "Visual Processing Network",
    "hemisphere": "Left Hemisphere",
    "lobe": "Occipital Lobe",
    "region": "Primary Visual Cortex (V1)",
    "nucleus": "V1 Input Processing Nucleus",
    "column": "Orientation Column",
    "layer": "Layer 4C (Thalamic Input Layer)",
    "cluster": "Retinal Input Cluster"
  }
}

