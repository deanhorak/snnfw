  "adapters": {
    "retina": {
      "type": "retina",
      "parameters": {
        "grid_size": 8,
        "num_orientations": 10,
        "edge_threshold": 0.165,
        "edge_operator": "sobel",
        "encoding_strategy": "rate",
        "temporal_window": 200.0,
        "neuron_window_size": 200.0,
        "neuron_threshold": 0.7,
        "neuron_max_patterns": 100
      }
    }
  },
  "hierarchy": {
