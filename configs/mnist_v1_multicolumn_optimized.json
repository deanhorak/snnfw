{
  "experiment": {
    "name": "mnist_v1_multicolumn_optimized",
    "description": "MNIST with multi-column V1 architecture - Optimized with more training examples"
  },
  "network": {
    "architecture": "multicolumn_v1",
    "grid_size": 8,
    "num_orientations": 10,
    "edge_threshold": 0.165
  },
  "neuron": {
    "window_size_ms": 100.0,
    "similarity_threshold": 0.85,
    "max_patterns": 400,
    "similarity_metric": "histogram"
  },
  "learning": {
    "strategy": "hybrid",
    "merge_threshold": 0.85,
    "merge_weight": 0.3,
    "blend_alpha": 0.2,
    "prune_threshold": 2
  },
  "classification": {
    "strategy": "majority",
    "k_neighbors": 5,
    "distance_exponent": 2.0
  },
  "training": {
    "examples_per_digit": 6000,
    "test_images": 10000
  },
  "spike_processor": {
    "num_threads": 20,
    "time_slice_ms": 1.0,
    "buffer_size": 10000
  },
  "stdp": {
    "a_plus": 0.020,
    "a_minus": 0.015,
    "tau_plus": 20.0,
    "tau_minus": 20.0
  },
  "data": {
