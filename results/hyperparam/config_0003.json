{
  "experiment": {
    "name": "mnist_hyperparam_search",
    "description": "Hyperparameter optimization",
    "version": "5.0.0"
  },
  "network": {
    "grid_size": 8,
    "region_size": 3,
    "num_orientations": 8,
    "neurons_per_feature": 1,
